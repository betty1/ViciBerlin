<?xml version="1.0" encoding="utf-8"?>
<com.emilsjolander.components.StickyScrollViewItems.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sticky_scroll"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:animateLayoutChanges="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:animateLayoutChanges="true"
        >

        <LinearLayout
            android:orientation="horizontal"
            style="?primaryBar"
            android:tag="sticky"
            >

            <TextView
                style="?primaryBarText"
                android:text="Demographie"
            />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            style="?secondaryBar"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/age_arrow"
                android:src="@drawable/android_arrowup"
                android:layout_gravity="center_vertical"
                android:tag="down"
                />

            <TextView
                android:id="@+id/age_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alter"
                android:padding="10dp" />

        </LinearLayout>

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/age_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            style="?secondaryBar"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gender_arrow"
                android:src="@drawable/android_arrow"
                android:layout_gravity="center_vertical"
                android:tag="up" />

            <TextView
                android:id="@+id/gender_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frauen/Männer"
                android:padding="10dp"
                />
        </LinearLayout>

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/gender_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:orientation="horizontal"
            style="?secondaryBar"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_arrow"
                android:src="@drawable/android_arrow"
                android:layout_gravity="center_vertical"
                android:tag="up" />

            <TextView
                android:id="@+id/location_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wohnlage"
                android:padding="10dp"
                />
        </LinearLayout>

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/location_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:orientation="horizontal"
            style="?secondaryBar"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/duration_arrow"
                android:src="@drawable/android_arrow"
                android:layout_gravity="center_vertical"
                android:tag="up" />

            <TextView
                android:id="@+id/duration_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wohndauer"
                android:padding="10dp"
                />
        </LinearLayout>

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/duration_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:orientation="horizontal"
            style="?primaryBar"
            android:tag="sticky"
            >

            <TextView
                style="?primaryBarText"
                android:text="Yelp"
                />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yelp_progressbar"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                style="?secondaryBar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurants: "
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:id="@+id/restaurants_textview"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:textColor="@android:color/white"
                    android:text=" pro km2"
                    android:id="@+id/restaurant_xtratextview"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                style="?secondaryBar"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafés: "
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:id="@+id/cafes_textview"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text=" pro km2"
                    android:textColor="@android:color/white"
                    android:id="@+id/cafes_xtratextview"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                style="?secondaryBar"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nightlife: "
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:id="@+id/nightlife_textview"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text=" pro km2"
                    android:textColor="@android:color/white"
                    android:id="@+id/nightlife_xtratextview"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:tag="sticky"
            style="?primaryBar"
            >

            <TextView
                style="?primaryBarText"
                android:text="Twitter"
                />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twitter_progressbar"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="invisible" />
        </LinearLayout>

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/twitter_flowlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </org.apmem.tools.layouts.FlowLayout>


    </LinearLayout>

</com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>
