<?xml version="1.0" encoding="utf-8"?>
<com.emilsjolander.components.StickyScrollViewItems.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sticky_scroll"
    android:layout_height="match_parent" android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_dark"
            android:text="Demographie"
            android:padding="15dp"
            android:tag="sticky"/>

        <TextView
            android:id="@+id/age_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/holo_red_light"
            android:text="Alter"
            android:padding="10dp"
            />

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/age_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/gender_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/holo_red_light"
            android:text="Frauen/MÃ¤nner"
            android:padding="10dp"
            />

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/gender_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/location_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/holo_red_light"
            android:text="Wohnlage"
            android:padding="10dp"
            />

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/location_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Twitter"
            android:padding="15dp"
            android:background="@android:color/holo_red_dark"
            android:tag="sticky" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="300dip"
            android:background="@android:color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Yelp"
            android:padding="15dp"
            android:background="@android:color/holo_red_dark"
            android:tag="sticky" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="300dip"
            android:background="@android:color/white"
            />

    </LinearLayout>

</com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>
