<?xml version="1.0" encoding="utf-8"?>
<com.emilsjolander.components.StickyScrollViewItems.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sticky_scroll"
    android:layout_height="match_parent" android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/header_bar"
            android:text="Demographie"
            android:tag="sticky"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sub_bar"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/age_arrow"
                android:src="@drawable/android_arrowup"
                android:layout_gravity="center_vertical"
                android:tag="down"
                />

            <TextView
                android:id="@+id/age_header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Alter"
                android:padding="10dp" />

        </LinearLayout>

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/age_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sub_bar"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gender_arrow"
                android:src="@drawable/android_arrow"
                android:layout_gravity="center_vertical"
                android:tag="up" />

            <TextView
                android:id="@+id/gender_header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Frauen/Männer"
                android:padding="10dp"
                />
        </LinearLayout>

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/gender_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sub_bar"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_arrow"
                android:src="@drawable/android_arrow"
                android:layout_gravity="center_vertical"
                android:tag="up" />

            <TextView
                android:id="@+id/location_header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Wohnlage"
                android:padding="10dp"
                />
        </LinearLayout>

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/location_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sub_bar"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/duration_arrow"
                android:src="@drawable/android_arrow"
                android:layout_gravity="center_vertical"
                android:tag="up" />

            <TextView
                android:id="@+id/duration_header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Wohndauer"
                android:padding="10dp"
                />
        </LinearLayout>

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/duration_chart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:layout_margin="20dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Yelp"
            android:padding="15dp"
            android:background="@color/header_bar"
            android:textColor="@android:color/white"
            android:tag="sticky"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sub_bar"
                android:layout_margin="2dp"
                android:padding="@dimen/subitem_padding"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurants: "
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/restaurants_textview"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:textColor="@android:color/white"
                    android:text=" pro km2"
                    android:id="@+id/restaurant_xtratextview"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sub_bar"
                android:layout_margin="2dp"
                android:padding="@dimen/subitem_padding"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafés: "
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/cafes_textview"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text=" pro km2"
                    android:textColor="@android:color/white"
                    android:id="@+id/cafes_xtratextview"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sub_bar"
                android:layout_margin="2dp"
                android:padding="@dimen/subitem_padding"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nightlife: "
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/nightlife_textview"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text=" pro km2"
                    android:textColor="@android:color/white"
                    android:id="@+id/nightlife_xtratextview"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Twitter"
            android:padding="15dp"
            android:background="@color/header_bar"
            android:textColor="@android:color/white"
            android:tag="sticky"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/twitter_linearlayout"></LinearLayout>

    </LinearLayout>

</com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>
